<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:admin) %></th>
      <th>Number of registered tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? "Yes" : "No" %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user), class: "show-user btn btn-primary" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user), class: "edit-user btn btn-primary" %></td>
        <td><%= button_to "Delete", admin_user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-user btn btn-danger", "data-destroy_user": user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>